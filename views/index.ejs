    <script>
        // Search functionality
        function searchServices() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase().trim();
            if (searchTerm) {
                alert(`Searching for: "${searchTerm}"\n\nIn a real application, this would:\n‚Ä¢ Filter available services\n‚Ä¢ Show search results\n‚Ä¢ Redirect to service booking page`);
            } else {
                alert('Please enter a service to search for');
            }
        }

        // Service selection
        function selectService(serviceName) {
            alert(`You selected: ${serviceName}\n\nIn a real application, this would:\n‚Ä¢ Redirect to ${serviceName} service page\n‚Ä¢ Show available professionals\n‚Ä¢ Allow booking and scheduling`);
        }

        // Info pages
        function showInfo(pageName) {
            alert(`${pageName} page\n\nIn a real application, this would redirect to the ${pageName} page with relevant information.`);
        }

        // Search on Enter key
        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                searchServices();
            }
        });

        // Smooth scroll for navigation (if needed)
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Urban Service Landing Page Loaded Successfully');
